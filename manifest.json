{
  "manifest_version": 3,
  "name": "LLM Puzzle Break",
  "version": "1.2", 
  "description": "Take a break with different types of puzzles and quizzes generated by an AI! Keeps score per session.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html"
  }
}
