{
    "manifest_version": 3,
    "name": "Web Wanderer",
    "version": "1.2", 
    "description": "Click the button to discover random interesting websites based on your chosen categories.",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "*://generativelanguage.googleapis.com/*" 
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "options_page": "options.html",
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
      {
        "resources": [ "sites.json" ], 
        "matches": [ "<all_urls>" ], 
        "use_dynamic_url": false
      }
    ]
  }
  